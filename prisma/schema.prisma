datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id                   Int       @id @default(autoincrement())
  title                String
  description          String
  category             String
  price                Float
  discount             Float
  rating               Float
  stock                Int
  tags                 String[]
  sku                  String
  weight               Float
  dimensions           Json
  warrantyInformation  String
  shippingInformation  String
  availabilityStatus   String
  returnPolicy         String
  minimumOrderQuantity Int
  meta                 Json
  images               String[]
  thumbnail            String
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}
