datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id                      Int       @id @default(autoincrement())
  title                   String
  price                   Float
  description             String
  rating                  Float
  images                  Image[]
  sku                     String
  weight                  Int
  dimensions              Json
  warrantyInformation     String
  shippingInformation     String
  availabilityStatus      String
  reviews                 Json[]
  returnPolicy            String
  minimumOrderQuantity    Int
  createdAt               DateTime
  updatedAt               DateTime
  barcode                 String
  qrCode                  String
  thumbnail               String
}

model Image {
  id        Int     @id @default(autoincrement())
  url       String
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}
